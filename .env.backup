N8N_RUNNERS_ENABLED=true
N8N_LOG_LEVEL=debug
N8N_ENCRYPTION_KEY=auto-generated-key-please-change
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_USER_FOLDER=/Users/brtan/.n8n
N8N_PATH=/
N8N_DIAGNOSTICS_ENABLED=false
N8N_BASIC_AUTH_ACTIVE=false
N8N_TIMEZONE=UTC

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Midjourney API Configuration (via Discord)
MIDJOURNEY_API_KEY=your-midjourney-api-key
MIDJOURNEY_API_URL=https://api.midjourney.com/v1
MIDJOURNEY_DISCORD_WEBHOOK=your-discord-webhook-url
MIDJOURNEY_TIMEOUT=60000

# Twitter API Configuration - Account 1
TWITTER_API_KEY_1=your-twitter-api-key-1
TWITTER_API_SECRET_1=your-twitter-api-secret-1
TWITTER_ACCESS_TOKEN_1=your-twitter-access-token-1
TWITTER_ACCESS_SECRET_1=your-twitter-access-secret-1
TWITTER_ACCOUNT_NAME_1=your-main-twitter-account-name

# Twitter API Configuration - Account 2
TWITTER_API_KEY_2=your-twitter-api-key-2
TWITTER_API_SECRET_2=your-twitter-api-secret-2
TWITTER_ACCESS_TOKEN_2=your-twitter-access-token-2
TWITTER_ACCESS_SECRET_2=your-twitter-access-secret-2
TWITTER_ACCOUNT_NAME_2=your-second-twitter-account-name

# Twitter API Configuration - Account 3
TWITTER_API_KEY_3=your-twitter-api-key-3
TWITTER_API_SECRET_3=your-twitter-api-secret-3
TWITTER_ACCESS_TOKEN_3=your-twitter-access-token-3
TWITTER_ACCESS_SECRET_3=your-twitter-access-secret-3
TWITTER_ACCOUNT_NAME_3=your-third-twitter-account-name

# Tweet Generation Settings
TWEET_SCHEDULER_CRON="0 9 * * *"  # Run at 9 AM UTC
TWEET_MAX_LENGTH=280
TWEET_TOPICS="technology,ai,web development,programming"
TWEET_PROMPT="Create an engaging tweet about {topic} with a maximum of 280 characters."

# Image Generation Settings
IMAGE_PROMPT_PREFIX="Create a visually striking image of"
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024
IMAGE_FORMAT=png

# Error Handling and Monitoring
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=5000
NOTIFICATION_EMAIL=your-email@example.com

# Database Configuration (if needed)
DB_TYPE=sqlite
DB_PATH=/Users/brtan/.n8n/database.sqlite
